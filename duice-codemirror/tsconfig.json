{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "es6",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
